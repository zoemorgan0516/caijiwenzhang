<table>
  <tr>
    <thead>
      <td>文章标题</td>
      <td>文章内容</td>
      <td>工号名字</td>
      <td>阅读量</td>
      <td>文章标签</td>

    </thead>
  </tr>
  <tr>
    <tbody>
      <td><%= @article.title %></td>
      <td><%= @article.content %></td>
      <td><%= @article.gonghao_name %></td>
      <td><%= @article.traffic %></td>
      <td>
        <% @article.labels.each do |label| %>
        <%= label.name %>
        <% end %>
      </td>
    </tbody>
  </tr>
</table>


<%= simple_form_for(@comment, url: article_comments_path(@article)) do |f| %>
  <%= f.input :speaker_name, label: "评论者" %>
  <%= f.input :text, label: "评论内容" %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
