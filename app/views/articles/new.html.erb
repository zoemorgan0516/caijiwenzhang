<%= simple_form_for @article do |f| %>

  <%= f.input :title, as: :string %>
  <%= f.input :content, as: :text %>
  <%= f.input :gonghao_name, as: :string %>
  <%= f.input :traffic, as: :integer %>

  <hr />

  <%= simple_form_for(@picture, url: article_pictures_path(article_id: params[:id]), html: { multipart: true, class: "form-horizontal" }) do |f| %>
    <%= f.input :avatar, label: "图片" %>
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.button :submit, "提交素材", class: "btn btn-primary" %>
      <%#= link_to "返回", :back, class: "btn btn-default" %>
    </div>
  <% end %>

  <% @labels.each_with_index do |label, index| %>
    <input id="" name="checked_labels[<%= index %>]" type="checkbox" value="<%= label[1] %>" <%= @article.labels.find(label[1]).nil? ? '' : 'checked' %> />
    <label for="pet_dog"><%= label[0] %></label>
  <% end %>
  <%= f.button :submit, "提 交", class: "btn btn-primary" %>

<% end %>
