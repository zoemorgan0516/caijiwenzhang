<p id="notice"><%= notice %></p>

<h1>Tukus</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tukus.each do |tuku| %>
      <tr>
        <td><%= image_tag tuku.avatar.url('666') %></td>
        <td><%= link_to 'Show', tuku %></td>
        <td><%= link_to 'Edit', edit_tuku_path(tuku) %></td>
        <td><%= link_to 'Destroy', tuku, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tuku', new_tuku_path %>
